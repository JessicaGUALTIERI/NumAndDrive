@{
    string currentController = ViewContext.RouteData.Values["controller"].ToString();
    string currentAction = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html lang="fr-fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Num&Drive</title>
    <link rel="icon" href="../favicon.png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg bg-body-tertiary custom-bottom-shadow mb-5 px-5">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/img/logo.png" alt="Logo" width="50" height="50" class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                    <div class="navbar-nav gap-3">
                        @if (!(currentController == "Admin" && currentAction == "Index"))
                        {
                            <div class="border border-dark text-custom-color-blue custom-bottom-shadow fw-bold d-flex justify-content-center text-center align-items-center">
                                <a class="nav-link active" aria-current="page" asp-controller="admin" asp-action="Index">Panel administrateur</a>
                            </div>
                        }

                        @if (currentController == "User" && currentAction == "Index")
                        {
                                <a class="nav-link active" aria-current="page" asp-controller="User" asp-action="Settings">
                                    <img src="/img/settings-icon.png" alt="Réglages" class="vh-5"/>
                                </a>
                        }

                        @if (!(currentController == "Messages" && currentAction == "Index"))
                        {
                            <div class="border border-dark text-custom-color-blue custom-bottom-shadow fw-bold d-flex justify-content-center align-items-center">
                                <a class="nav-link active" aria-current="page" asp-controller="" asp-action="">Messagerie</a>
                            </div>
                        }

                        <div class="border border-dark text-custom-color-blue custom-bottom-shadow fw-bold d-flex justify-content-center align-items-center">
                            <a class="nav-link active" aria-current="page" asp-controller="account" asp-action="logout">Déconnexion</a>
                        </div>

                        @if (!(currentController == "User" && currentAction == "Index"))
                        {
                            <div class="border border-dark text-custom-color-blue custom-bottom-shadow fw-bold d-flex justify-content-center text-center align-items-center">
                                <a class="nav-link active" aria-current="page" asp-controller="user" asp-action="index">Accéder à mon profil</a>
                            </div>
                        }

                            
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container margin-middle">
        @RenderBody()
    </div>

    <footer class="fixed-bottom">
        <div class="container-fluid px-5 d-flex flex-wrap justify-content-between align-items-center py-3 custom-top-shadow bg-body">
            <p class="col-md-4 mb-0 text-body-secondary">2024 JeCyMa - Version 1.0</p>

            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <img src="/img/logo-text.png" alt="Logo" height="20">
            </a>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Accueil</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">FAQ</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">À propos</a></li>
            </ul>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>