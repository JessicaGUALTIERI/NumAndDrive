@model NumAndDrive.ViewModels.UserViewModel

@{
    string? action = ViewBag.Action;
}

<form method="post" asp-controller="admin" asp-action="@action">
    @Html.AntiForgeryToken()
    @if (action.ToLower() == "edit")
    {
        <input type="hidden" asp-for="User.Id">
    }
    <div class="text-custom-color-orange" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="User.FirstName" class="col-form-label">Prénom</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="User.FirstName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-custom-color-orange" asp-validation-for="User.FirstName"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="User.LastName" class="col-form-label">Nom</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="User.LastName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-custom-color-orange" asp-validation-for="User.LastName"></span>
        </div>
    </div>
    @if (action.ToLower() == "create")
    {
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="User.Email" class="col-form-label">Email</label>
            </div>
            <div class="col-3">
                <input type="text" asp-for="User.Email" class="form-control" />
            </div>
            <div class="col">
                <span class="text-custom-color-orange" asp-validation-for="User.Email"></span>
            </div>
        </div>
    }
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="User.PhoneNumber" class="col-form-label">Numéro de téléphone</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="User.PhoneNumber" class="form-control" />
        </div>
        <div class="col">
            <span class="text-custom-color-orange" asp-validation-for="User.PhoneNumber"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="User.StatusId" class="col-form-label">Statut de l'utilisateur</label>
        </div>
        <div class="col-3">
            <select asp-for="User.StatusId" class="form-control">
                <option value="">- Sélectionner -</option>
                @if (Model.Statuses != null && Model.Statuses.Count() > 0)
                {
                    foreach (var status in Model.Statuses)
                    {
                        <option value="@status.StatusId">@status.Type</option>
                    }
                }
            </select>
        </div>
        <div class="col">
            <span class="text-custom-color-orange" asp-validation-for="User.StatusId"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="User.DepartmentId" class="col-form-label">Service ou classe</label>
        </div>
        <div class="col-3">
            <select asp-for="User.DepartmentId" class="form-control">
                <option value="">- Sélectionner -</option>
                @if (Model.Departments != null && Model.Departments.Count() > 0)
                {
                    foreach (var department in Model.Departments)
                    {
                        <option value="@department.DepartmentId">@department.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col">
            <span class="text-custom-color-orange" asp-validation-for="User.DepartmentId"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn custom-color-orange text-white custom-bottom-shadow" value="Valider" />
        </div>
        <div class="col-3">
        </div>
    </div>
</form>