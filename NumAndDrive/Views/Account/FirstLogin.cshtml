@using NumAndDrive.ViewModels
@model ChangePasswordViewModel

<div class="row">
    <div class="container w-25 d-flex align-items-center">
        <div class="card p-3">
            <div class="card-body">
                <h5 class="card-title text-center">Changer le mot de passe</h5>
                <form asp-action="FirstLogin">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mt-3">
                        <label asp-for="NewPassword" class="control-label">Nouveau mot de passe</label>
                        <input type="password" asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="ConfirmNewPassword" class="control-label">Confirmez votre mot de passe</label>
                        <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group align-items-center mt-3">
                        <button type="submit" class="btn custom-color-orange text-white custom-bottom-shadow ">Changer le mot de passe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
