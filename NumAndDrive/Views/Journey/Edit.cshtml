@using NumAndDrive.ViewModels
@model JourneyUpdateViewModel
<h1 class="mb-3">Modification du voyage</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="journeyId" />
    <div class="form-group">
        <label asp-for="DepartureDate"></label>
        <input type="date" asp-for="DepartureDate" class="form-control" />
        <span asp-validation-for="DepartureDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureHour"></label>
        <input type="time" asp-for="DepartureHour" class="form-control" />
        <span asp-validation-for="DepartureHour" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailableSpots"></label>
        <input asp-for="AvailableSpots" class="form-control" />
        <span asp-validation-for="AvailableSpots" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn custom-color-orange text-white custom-bottom-shadow">Modifier</button>
        <button class="btn custom-color-orange text-white custom-bottom-shadow" asp-controller="journey" asp-action="delete" asp-route-journeyId="journeyId">Supprimer</button>
    </div>
</form>